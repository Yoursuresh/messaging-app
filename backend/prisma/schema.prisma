// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String    @id @unique @db.VarChar(100)
  name         String
  passwordHash String
  channels     Channel[]
  sent         Message[] @relation("to")
  received     Message[] @relation("from")
}

model Channel {
  name  String @id @unique
  users User[]
}

model Message {
  id            String   @id @unique @default(uuid())
  text          String
  to            User     @relation("to", fields: [toUserEmail], references: [email])
  from          User     @relation("from", fields: [fromUserEmail], references: [email])
  toUserEmail   String   @db.VarChar(100)
  fromUserEmail String   @db.VarChar(100)
  time          DateTime @default(now())
}
